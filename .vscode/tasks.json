{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ with matplotlib-cpp",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I/usr/include/matplotlib-cpp", // matplotlib-cpp include directory
                "-I/usr/include/python3.8", // Replace with your Python include path
                "-lpython3.8", // Link against Python library, replace with your version
                // Add any other library paths that you need to include
                "-std=c++17",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by the debugger."
        }
    ],
    "version": "2.0.0"
}
